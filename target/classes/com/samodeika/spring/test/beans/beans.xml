<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">



	<bean id="person" class="com.samodeika.spring.test.Person">
		<constructor-arg name="id" value="555"></constructor-arg>
		<constructor-arg name="name" value="Marry"></constructor-arg>
		<property name="taxId">
			<value>321</value>
		</property>
		<property name="address" ref="address"></property>
	</bean>

	<bean id="person2" class="com.samodeika.spring.test.Person">
		<constructor-arg name="id" value="123"></constructor-arg>
		<constructor-arg name="name" value="Mike"></constructor-arg>
		<property name="taxId">
			<value>321</value>
		</property>
		<property name="address" ref="address"></property>
	</bean>


	<bean id="address" class="com.samodeika.spring.test.Address">
		<constructor-arg name="street" value="Rodopski izvor 43A"></constructor-arg>
		<constructor-arg name="postcode" value="1680"></constructor-arg>
	</bean>

	<bean id="address2" class="com.samodeika.spring.test.Address"
		p:street="23 Vinyard Lane" p:postcode="6789">
	</bean>

	<bean id="personFactory" class="com.samodeika.spring.test.PersonFactory">
	</bean>

	<bean id="basket" class="com.samodeika.spring.test.FruitBasket">
		<constructor-arg value="John`s fruit basket" name="name"></constructor-arg>
		<constructor-arg>
			<list>
				<value>orange</value>
				<value>apple</value>
			</list>
		</constructor-arg>
	</bean>

	<bean id="jungle" class="com.samodeika.spring.test.Jungle">
		<property name="largest" ref="elephant"></property>
		<property name="animals">
			<list>
				<ref bean="snake" />
				<ref bean="lion" />
			</list>
		</property>
	</bean>

	<bean id="lion" class="com.samodeika.spring.test.Animal">
		<property name="name" value="Igor"></property>
		<property name="type" value="lion"></property>
	</bean>
	<bean id="elephant" class="com.samodeika.spring.test.Animal">
		<property name="name" value="Richard"></property>
		<property name="type" value="elephant"></property>
	</bean>
	<bean id="snake" class="com.samodeika.spring.test.Animal">
		<property name="name" value="Bob"></property>
		<property name="type" value="snake"></property>
	</bean>
</beans>
